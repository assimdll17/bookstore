{% extends 'base.html.twig' %}
{% block content %}
<div class="row">
    <div class="col-md-3 mt-1">

        <h3>Filtrer</h3>
        {{ form(formMC) }}
        <hr>
        {{ form(formNote) }}
        <hr>
        <div class="mb-3">
        {{ form(formGenre) }}
        </div>
        <hr>
        <div>
            {{ form(formAuteur) }}
        </div>
    </div>

 <div class="col-md-9 mt-1">
 <h1>Nos livres</h1>
  <div class="row mt-2" >
{% for livre in livres %}
  <div class="col-md-4 mt-4">
      <a href="/affiche/livre/{{ livre.id }}">
     <div class="card-img" style="border:1px solid #f0f0f0;  height: 190px; background-color: #f9fafc">
       <h5>ISBN : {{ livre.isbn }}</h5>
       <h5>Titre : {{ livre.titre }}</h5>
         <h5>Date de parution : {{ livre.dateDeParution | date('d/m/Y') }}</h5>
       <h5>Note : {{ livre.note }}</h5>
     </div>
      </a>
      <hr>
  </div>
{% endfor %}
  </div>
     <div style="text-align: center">
         {{ knp_pagination_render(livres) }}
     </div>
</div>

</div>


{% endblock %}