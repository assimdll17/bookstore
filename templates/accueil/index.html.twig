{% extends 'base.html.twig' %}
{% block content %}
<div class="row">
    <div class="col-md-2 mt-1">

        <h3>Filtrer</h3>
        <div class="mb-3">
        {{ form(formGenre) }}
        </div>
        <div>
            {{ form(formAuteur) }}
        </div>
    </div>

 <div class="col-md-10 mt-1">
 <h1>Nos livres</h1>
  <div class="row mt-2" >
{% for livre in livres %}
  <div class="col-md-4 mt-4">
     <div class="livre-items">
       <h5>ISBN : {{ livre.isbn }}</h5>
       <h5>Titre : {{ livre.titre }}</h5>
         <h5>Date de parution : {{ livre.dateDeParution | date('d/m/Y') }}</h5>
       <h5>Note : {{ livre.note }}</h5>
     </div>
      <hr>
  </div>
{% endfor %}
  </div>
</div>
</div>
    {{ knp_pagination_render(livres) }}
{% endblock %}